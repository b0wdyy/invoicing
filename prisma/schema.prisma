generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  uuid     String    @id @default(uuid())
  email    String    @unique
  password String
  name     String
  invoices Invoice[]
}

model Customer {
  id         Int       @id @default(autoincrement())
  name       String
  email      String
  vat_number String
  address    String
  invoices   Invoice[]

  @@index([name])
  @@index([email])
}

model Invoice {
  id         Int           @id @default(autoincrement())
  number     String        @unique
  userId     String
  user       User          @relation(fields: [userId], references: [uuid])
  customerId Int
  customer   Customer      @relation(fields: [customerId], references: [id])
  amount     Int
  date       DateTime
  status     String
  due_date   DateTime
  items      InvoiceItem[]

  @@index([userId])
  @@index([customerId])
  @@index([number])
}

model InvoiceItem {
  id          Int     @id @default(autoincrement())
  invoiceId   Int
  invoice     Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  description String
  quantity    Int
  price       Int
}
